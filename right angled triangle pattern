import java.util.Scanner;

public class Main {

    public static void main(String[] args) {

        // Create a Scanner object for user input
        Scanner scanner = new Scanner(System.in);

        // Prompt the user to enter the number of rows
        System.out.println("Enter the number of rows for the star pattern:");
        int n = scanner.nextInt();

        // The outer loop handles the number of rows
        // It iterates from 1 up to the number entered by the user
        for (int i = 1; i <= n; i++) {

            // The inner loop handles the number of stars in each row
            // It iterates from 1 up to the current row number (i)
            for (int j = 1; j <= i; j++) {
                // Print a star followed by a space
                System.out.print("* ");
            }

            // After each row is printed, move to the next line
            System.out.println();
        }

        // Close the scanner to prevent resource leaks
        scanner.close();
    }
}
