import java.util.Scanner;

public class Main {

    // Method to calculate the GCD (Greatest Common Divisor) using Euclidean algorithm
    public static int gcd(int a, int b) {
        while (b != 0) {
            int temp = b;
            b = a % b;
            a = temp;
        }
        return a;
    }

    // Method to calculate the LCM (Least Common Multiple)
    public static int lcm(int a, int b) {
        // LCM = (|a * b|) / GCD(a, b)
        return Math.abs(a * b) / gcd(a, b);
    }

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.println("Enter the first number:");
        int num1 = scanner.nextInt();

        System.out.println("Enter the second number:");
        int num2 = scanner.nextInt();

        // Calculate and display the GCD
        int gcdResult = gcd(num1, num2);
        System.out.println("The GCD of " + num1 + " and " + num2 + " is: " + gcdResult);

        // Calculate and display the LCM
        int lcmResult = lcm(num1, num2);
        System.out.println("The LCM of " + num1 + " and " + num2 + " is: " + lcmResult);

        scanner.close();
    }
}
